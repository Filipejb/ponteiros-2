#include <stdio.h>

void calculaSoma(int *a, int b) {
    *a = *a + b;
}

int main() {
    int valorA, valorB;

    printf("Digite o valor de A: ");
    scanf("%d", &valorA);

    printf("Digite o valor de B: ");
    scanf("%d", &valorB);

    calculaSoma(&valorA, valorB);

    printf("Valor de A: %d\n", valorA);
    printf("Valor de B: %d\n", valorB);

    return 0;
}
